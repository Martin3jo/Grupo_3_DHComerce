<!DOCTYPE html>
<html lang="en">
<!--HEAD-->
<%- include('partials/head', {titulo : 'Registro' , estilo : 'registro.css' }) %>

  <body>
    <!--Header-->
    <%- include('partials/header.ejs')%>
      <!--Main-->
      <main class="body-registro">
        <button class="header-carro">
          <i class="fa-solid fa-cart-arrow-down"></i>
        </button>

        <div class="form-registro">
          <form action="/usuario/registro" method="post">
            <h1>Formulario de Registro</h1>
            <div class="input-box">
              <label for="nombre">Nombre</label>
              <input type="text" value="<%= locals.old && old.nombre ? old.nombre : null %>"
                placeholder="Ingrese su Nombre" name="nombre">
              <% if (locals.errors && errors.nombre) { %>
                <div>
                  <%= errors.nombre.msg %>
                </div>
                <% } %>
            </div>
            <div class="input-box">
              <label for="apellido">Apellido</label>
              <input type="text" placeholder="Ingrese su Apellido" name="apellido"
                value="<%= locals.old && old.apellido ? old.apellido : null %>">
              <% if (locals.errors && errors.apellido) { %>
                <div>
                  <%= errors.apellido.msg %>
                </div>
                <% } %>
            </div>
            <div class="input-box">
              <label for="usuario">Usuario</label>
              <input type="text" placeholder="Usuario" name="usuario">
            </div>
            <div class="input-box">
              <label for="password">Contraseña</label>
              <input type="password" placeholder="Contraseña" name="password"
                value="<%= locals.old && old.password ? old.password : null %>">
              <% if (locals.errors && errors.password) { %>
                <div>
                  <%= errors.password.msg %>
                </div>
                <% } %>
            </div>
            <div class="input-box">
              <label for="email">Correo Electrónico</label>
              <input type="email" placeholder="martin@gmail.com" name="email"
                value="<%= locals.old && old.email ? old.email : null %>">
              <% if (locals.errors && errors.email) { %>
                <div>
                  <%= errors.email.msg %>
                </div>
                <% } %>
            </div>
            <div class="input-box">
              <label for="fechaNac">Fecha de nacimiento</label>
              <input type="date" placeholder="Fecha de nacimiento" name="fechaNac" class="fecNac"
                value="<%= locals.old && old.fechaNac ? old.fechaNac : null %>">
              <% if (locals.errors && errors.fechaNac) { %>
                <div>
                  <%= errors.fechaNac.msg %>
                </div>
                <% } %>
            </div>

            <button type="submit" class="boton-registro">Registrarme</button>
          </form>
        </div>

      </main>

      <!--Footer-->
      <%- include('partials/footer.ejs')%>
  </body>

</html>