<!DOCTYPE html>
<html lang="en">

<!--<%- include('../partials/head', {titulo : 'crear', estilo : '404.css'}) %>-->
<%- include('../partials/head', {titulo : 'crear' , estilo : 'crearProducto.css' }) %>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <body>
        <%- include('../partials/header') %>
            <main class="main-adminProducto">
                <form action="/admin/crearProducto" method="post" enctype="multipart/form-data"
                    class="form-crearProducto">
                    <!--MARCA-->
                    <div class="form-input-admin">
                        <label for="marca">Nombre del Producto</label>
                        <input type="text" name="marca"
                            value="<%= locals.old && old.marca ? old.marca : null %>"
                            class=" <%= locals.errors && errors.marca? 'is-invalid' : null %> " />
                        <!--comentario para los errores-->
                        <% if (locals.errors && errors.marca) { %>
                            <div>
                                <%= errors.marca.msg %>
                            </div>
                            <% } %>
                    </div>
                    <!--DESCRIPCION-->
                    <div class="form-input-admin">
                        <label for="descripcion">Descripcion</label>
                        <textarea name="descripcion" id="comentario" cols="30" rows="5"></textarea>
                    </div>
                    <!--VOLUMEN-->
                    <div class="form-input-admin">
                        <label for="volumen">Volumen:</label>
                        <select name="volumen" id="volumen"
                            value="<%= locals.old && old.volumen ? old.volumen : null %>">
                            <option disabled>Seleccione una volumen</option>
                            <option value="0.250">250 cm3</option>
                            <option value="0.300">300 cm3</option>
                            <option value="0.330">330 cm3</option>
                            <option value="0.500">500 cm3</option>
                            <option value="0.700">700 cm3</option>
                            <option value="0.750">750 cm3</option>
                            <option value="1.000">1000 cm3</option>
                            <option value="1.500">1500 cm3</option>
                            <option value="2.000">2000 cm3</option>
                            <option value="2.500">2500 cm3</option>
                            <option value="3.000">3000 cm3</option>
                        </select>
                    </div>
                    <!--CATEGORIA-->
                    <div class="form-input-admin">
                        <label for="categoria">Categoría:</label>
                        <select name="categoria" id="categoria"
                            value="<%= locals.old && old.categoria ? old.categoria : null %>">
                            <option disabled>Seleccione una categoria</option>
                            <option value="gaseosa">Gaseosa</option>
                            <option value="sin-azucar">Sin-Azúcar</option>
                            <option value="cerveza">Cerveza</option>
                            <option value="soda">Soda</option>
                            <option value="vino">Vino</option>
                        </select>
                        <!--comentario para los errores-->
                        <% if (locals.errors && errors.categoria) { %>
                            <div>
                                <%= errors.categoria.msg %>
                            </div>
                            <% } %>
                    </div>
                    <!--DISPONIBILIDAD-->
                    <div class="form-input-admin">
                        <label for="disponibilidad">Disponibilidad</label>
                        <input type="text" name="disponibilidad"/>
                    </div>
                    <!--PRECIO-->
                    <div class="form-input-admin">
                        <label for="precio">Precio</label>
                        <input type="text" name="precio" value="<%= locals.old && old.precio ? old.precio : null %>" />
                        <!--comentario para los errores-->
                        <% if (locals.errors && errors.precio) { %>
                            <div>
                                <%= errors.precio.msg %>
                            </div>
                            <% } %>
                    </div>
                    <!--AVATAR-->
                    <div class="form-input-admin">
                        <label for="avatar">imagen Producto:</label><br>
                        <input type="file" id="imagen" name="avatar" accept="image/*">
                        <!--comentario para los errores-->
                        <% if (locals.errors && errors.avatar) { %>
                            <div>
                                <%= errors.avatar.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="boton-crear">
                        <button type="submit" name="accion" value="crear">Crear</button>
                    </div>

                </form>
                <div class="boton-volver">
                    <a href="/admin/productos"><button><i class='bx bx-arrow-back'></i></button></a>
                </div>
            </main>
            <!-- <%- include('../partials/footer') %> -->
    </body>

</html>