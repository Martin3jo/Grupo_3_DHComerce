<!DOCTYPE html>
<html lang="en">

<!--<%- include('../partials/head', {titulo : 'crear', estilo : '404.css'}) %>-->

<body>
    <!--<%- include('../partials/header') %> -->
    <main>
        <%  if(locals.errors) {%>
        <% errors.forEach(error => { %>
            <p><%= error.msg %></p>
        <% }); %>
        <% } %>
        <form action="/admin/crearProducto" method="post" enctype="multipart/form-data">
            <div>
                <label for="nombreProducto">Nombre del Producto</label>
                <input type="text" name="nombreProducto" value="<%= locals.old && old.nombreProducto ? old.nombreProducto : '' %>"/>
            </div>
            <div>
                <label for="descripcion">Descripcion</label>
                <input type="text" name="descripcion" />
            </div>
        <div>
            <label for="imagenProducto">imagen Producto:</label><br>
            <input type="file" id="imagen" name="imagenProducto" accept="image/*">
        </div>
            <div>
                <label for="categoria">Categor√≠a</label>
                <input type="text" name="categoria" value="<%= locals.old && old.categoria ? old.categoria : '' %>"/>
            </div>
            <div>
                <label for="precio">Precio</label>
                <input type="text" name="precio" value="<%= locals.old && old.precio ? old.precio : '' %>"/>
            </div>
            <button type="submit" name="accion" value="crear">Crear</button>
        </form>
        <a href="/admin"><button>Volver</button></a>
    </main>
    <!-- <%- include('../partials/footer') %> -->
</body>

</html>