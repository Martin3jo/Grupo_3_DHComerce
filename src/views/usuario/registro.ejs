<!DOCTYPE html>
<html lang="en">
<!--HEAD-->
<%- include('../partials/head', {titulo : 'Registro' , estilo : 'registro.css' }) %>


  <body>
    <!--Header-->
    <%- include('../partials/header.ejs')%>
      <!--Main-->
      <main class="body-registro">
        <button class="header-carro">
          <i class="fa-solid fa-cart-arrow-down"></i>
        </button>

        <div class="form-registro">
          <form action="/usuario/registro" method="post">
            <h1>Formulario de Registro</h1>
            <div class="input-box">
              <label for="nombre">Nombre/s</label>
              <input type="text" value="<%= locals.old && old.nombre ? old.nombre : null %>"
                placeholder="Ingrese su Nombre" name="nombre">
              <% if (locals.errors && errors.nombre) { %>
                <div>
                  <%= errors.nombre.msg %>
                </div>
                <% } %>
            </div>
            <div class="input-box">
              <label for="apellido">Apellido/s</label>
              <input type="text" placeholder="Ingrese su Apellido" name="apellido"
                value="<%= locals.old && old.apellido ? old.apellido : null %>">
              <% if (locals.errors && errors.apellido) { %>
                <div>
                  <%= errors.apellido.msg %>
                </div>
                <% } %>
            </div>
            <div class="input-box">
              <label for="dni">D.N.I.</label>
              <input type="text" placeholder="45234234" name="dni">
            </div>
            <div class="input-box">
              <label for="celular">Celular</label>
              <input type="text" placeholder="3855567984" name="celular">
            </div>
            <div class="input-box">
              <label for="direccion">Direccion</label>
              <input type="text" placeholder="belgrano sur N° 1200" name="direccion">
            </div>
            <div class="input-box">
              <label for="email">Correo Electrónico</label>
              <input type="email" placeholder="martin@gmail.com" name="email"
              value="<%= locals.old && old.email ? old.email : '' %>">
              <% if (locals.errors && errors.email) { %>
                <div>
                  <%= errors.email.msg %>
                </div>
                <% } %>
              </div>
              <div class="input-box">
                <label for="password">Contraseña</label>
                <input type="password" placeholder="Contraseña" name="password"
                  value="<%= locals.old && old.password ? old.password : '' %>">
                <% if (locals.errors && errors.password) { %>
                  <div>
                    <%= errors.password.msg %>
                  </div>
                  <% } %>
              </div>
              <div class="input-box">
                <label for="password2">Repetir Contraseña</label>
                <input type="password" placeholder="Repetir Contraseña" name="password2"
                  value="<%= locals.old && old.password2 ? old.password : null %>">
                  <% if (locals.errors && errors.password2) { %>
                    <p><%= errors.password2.msg %></p>
                <% } %>
                
              </div>
            <div class="input-box">
              <label for="fecha_nac">Fecha de nacimiento</label>
              <input type="date" placeholder="Fecha de nacimiento" name="fecha_nac" class="fecNac"
                value="<%= locals.old && old.fecha_nac ? old.fecha_nac : null %>">
              <% if (locals.errors && errors.fecha_nac) { %>
                <div>
                  <%= errors.fecha_nac.msg %>
                </div>
                <% } %>
            </div>

            <button type="submit" class="boton-registro">Registrarme</button>
          </form>
        </div>

      </main>

      <!--Footer-->
      <%- include('../partials/footer.ejs')%>
  </body>

</html>